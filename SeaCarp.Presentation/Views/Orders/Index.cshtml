@model SeaCarp.Presentation.Models.ViewModels.OrderViewModel

<h2>Order Details</h2>
<p><strong>Order Date:</strong> @Model.OrderDate</p>
<p><strong>Status:</strong> @Model.Status</p>
<p><strong>Delivery address:</strong> @Model.DeliveryAddress</p>
<p><strong>Order Number:</strong> @Model.OrderNumber</p>

<h3>Order Items</h3>
<table>
    <thead>
        <tr>
            <th>Product</th>
            <th>Description</th>
            <th>Category</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var orderItem in Model.OrderItems)
        {
            <tr>
                <td>@orderItem.Product.ProductName</td>
                <td>@orderItem.Product.Description</td>
                <td>@orderItem.Product.Category</td>
                <td>@orderItem.Quantity</td>
                <td>$@orderItem.UnitPrice</td>
                <td>$@(orderItem.Quantity * orderItem.UnitPrice)</td>
            </tr>
        }
    </tbody>
</table>

<h4>Total Amount: $@Model.Total</h4>