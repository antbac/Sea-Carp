@model SeaCarp.Presentation.Models.ViewModels.OverviewViewModel

<div class="text-center">
    <h1 class="display-4">Welcome to Sea Carp</h1>
    <p>Your ultimate destination for premium fishing gear and accessories.</p>
</div>

<div class="hero text-center bg-primary text-white py-5">
    <h2>Catch the Best Deals on Fishing Gear!</h2>
    <p>Rods, reels, bait, and everything you need for your next fishing adventure.</p>
    <a class="btn btn-light btn-lg" href="@Url.ActionLink(nameof(ProductController.Index), nameof(ProductController).RemoveControllerSuffix().ToPlural())">Shop Now</a>
</div>

<div class="container mt-5">
    <h2 class="text-center">Featured Products</h2>
    <div class="row">
        @foreach (var product in Model.FeaturedProducts)
{
    <div class="col-md-4">
                <div class="card">
                    <img src="/images/products/@(product.ProductName).png" class="card-img-top" alt="@(product.ProductName)">
                    <div class="card-body">
                        <h5 class="card-title">@product.ProductName</h5>
                        <p class="card-text">@product.Description</p>
                        <a href="/@nameof(ProductController).RemoveControllerSuffix()/@(product.Id)" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
}
    </div>
</div>
