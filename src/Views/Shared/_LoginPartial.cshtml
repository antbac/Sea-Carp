@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (RequestContext.Instance.CurrentUser.Value != null)
{
    <li class="nav-item">
        <a class="nav-link" asp-area="" asp-controller="Identity" asp-action="Profile">Profile</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="" asp-controller="Identity" asp-action="Logout">Logout</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-area="" asp-controller="Identity" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="" asp-controller="Identity" asp-action="Login">Login</a>
    </li>
}
</ul>
